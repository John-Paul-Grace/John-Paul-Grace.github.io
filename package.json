  "license": "ISC",
  "bugs": {
    "url": "https://github.com/John-Paul-Grace/John-Paul-Grace.github.io/issues"
  },
  "homepage": "https://github.com/John-Paul-Grace/John-Paul-Grace.github.io#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "if-env": "^1.0.4"
  }
}
